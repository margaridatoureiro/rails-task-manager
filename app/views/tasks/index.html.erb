<div id="index">
<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed? %>
      <i class="far fa-check-square"></i>
      <% else %>
      <i class="far fa-square"></i>
      <% end %>
       <%= link_to task.title, task_path(task.id) %>
       <small><%= link_to '☠️', task_path(task.id), method: :delete, data: { confirm: 'Are you sure?' } %></small>
    </li>
  <% end %>
</ul>
<%= link_to 'Add a new task', tasks_new_path %>
</div>
